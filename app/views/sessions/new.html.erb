<header>
  <div id="new-customer-header">
    <img src="/assets/logo.png" alt="">
    <h2>Sign In</h2>
    <p>New to Air Tailor? <a href="/customers/new">Create Account.</a></p>
  </div>
</header><!-- /header -->

<div id="new-customer-form">
  <%= form_tag '/login' do %>
    <%= text_field_tag :email, nil, placeholder: 'Email', :class => "login_form_field" %>

    <%= password_field_tag :password, nil, placeholder: 'Password', :class => "login_form_field" %>
    <%= submit_tag "Log In", :class => "button", :id => "login-button" %>
  <% end %>
  <%= link_to 'Forgot password?', new_password_reset_path %>
</div>


